@supports (display: flex) {
  body {
    background-color: #080c02;
    background-image: repeating-radial-gradient(#080c02, #09090b);
    background-size: 150vh 200vh;
    background-repeat: repeat;
    --faded-color: #889;
    --link-color: #9ac;
    --action-color: {{ colors.dark.action }};
    --secondary-color: {{ colors.dark.secondary }};
    color: #aab;
  }
}
