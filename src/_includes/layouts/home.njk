--- 
bodyClass: home
---
{% extends "wrapper.njk" %}

{% block intro %}
<div class="intro-section">
  <div>
    <div class="content">
      <h1>{{ site.tagline }}</h1>
      <p>{{ site.description }}</p>
      <p class="actions">
        <a class="action" href="#main">{{ actionText }}</a>
      </p>
    </div>
  </div>
  <div>
    <video autoplay muted loop width="400" height="400" poster="/assets/cube-static.avif">
      <source src="/assets/cube.webm" type="video/webm">
    </video>
  </div>
</div>
{% endblock %}
